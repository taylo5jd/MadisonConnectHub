@model lab_1_part_3.Pages.Skills.EditSkillModel
@{
    ViewData["Title"] = "Edit Skill";
}
<form asp-page="EditSkill">
    <input type="hidden" asp-for="@Model.SkillToUpdate.SkillID" />
    <label asp-for="@Model.SkillToUpdate.SkillType"></label>
    <input type="text" asp-for="@Model.SkillToUpdate.SkillType" />
    <br />
    <label asp-for="@Model.SkillToUpdate.SkillDescription"></label>
    <input type="text" asp-for="@Model.SkillToUpdate.SkillDescription" />
    <br /><br />
    <input type="submit" class="btn btn-success" asp-page="EditSkill" style="color: white; background-color:#AC9CD8" />
    <a asp-page="Index" class="btn btn-secondary" style="color: white; background-color:#AC9CD8">Cancel</a>
</form>
