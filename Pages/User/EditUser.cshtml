@model lab_1_part_3.Pages.User.EditUserModel
@{
    ViewData["Title"] = "Edit User Profile";
}

<form asp-page="EditUser">
    <input type="hidden" asp-for="@Model.UserToUpdate.ProfileID" />
    <label asp-for="@Model.UserToUpdate.FirstName"></label>
    <input type="text" asp-for="@Model.UserToUpdate.FirstName" />
    <br />
    <label asp-for="@Model.UserToUpdate.Username"></label>
    <input type="text" asp-for="@Model.UserToUpdate.Username" />
    <br />
    <label asp-for="@Model.UserToUpdate.LastName"></label>
    <input type="text" asp-for="@Model.UserToUpdate.LastName" />
    <br />
    <label asp-for="@Model.UserToUpdate.Email"></label>
    <input type="text" asp-for="@Model.UserToUpdate.Email" />
    <br />
    <label asp-for="@Model.UserToUpdate.PhoneNumber"></label>
    <input type="text" asp-for="@Model.UserToUpdate.PhoneNumber" />
    <br />
    <label asp-for="@Model.UserToUpdate.VideoIntroduction"></label>
    <input type="text" asp-for="@Model.UserToUpdate.VideoIntroduction" />
    <br />
    <label asp-for="@Model.UserToUpdate.LinkedIn"></label>
    <input type="text" asp-for="@Model.UserToUpdate.LinkedIn" />
    <br />
    <select name="NewUser.FacultyAssociation">
        <option value="Faculty">Faculty</option>
        <option value="Student">Student</option>
    </select>


 
    <a asp-page="AddSkillsToUser" class="btn btn-primary" style="color: white; background-color:#AC9CD8" asp-route-profileid="@Model.UserToUpdate.ProfileID">AddSKill</a>

    <input type="submit" class="btn btn-success" asp-page="EditUser" style="color: white; background-color:#AC9CD8" />
    <a asp-page="Index" class="btn btn-secondary" style="color: white; background-color:#AC9CD8">Cancel</a>
    <a asp-page="FileUpload" class="btn btn-secondary" style="color: white; background-color:#AC9CD8">Upload Image</a>

   
</form>