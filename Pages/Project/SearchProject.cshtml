@page
@using System.Data.SqlClient
@using lab_1_part_3.Pages.DBClasses
@model lab_1_part_3.Pages.Project.SearchProjectModel
@{
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="./style.css">

    <style>
        * {
            box-sizing: border-box;
            align-items: center;
        }

        body {
            align-items: center;
            font-family: "IBM Plex Sans";
            padding: 0;
            align-content: center;
        }


        .column {
            float: left;
            width: 30%;
            padding-top: 10px;
            padding-bottom: 10px;
            align-content: center;
            align-items: center;
            margin: auto;
        }

        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            padding: 10px;
            padding-bottom: 10px;
            width: 600px;
            text-align: center;
            background-color: #f1f1f1;
            flex: 0 0 100%;
            border-radius: 10%;
        }

        .card_img {
            width: 120 px;
            height: 120 px;
            overflow: hidden;
            border-radius: 100%;
            margin: 0px auto 0;
        }

            .card_img img {
                width: 100px;
                height: 100px;
                object-fit: cover;
            }


        .icon {
            display: inline-block;
        }

        .text-center {
            padding-left: 120px;
        }

    </style>
</head>

<body>
    
    <a asp-page="ViewProjects" class="btn btn-primary" style="color: white; background-color:#AC9CD8"> Back</a>

@{
    if (Model.SearchText == null)
    {
    <form asp-page="SearchProject">
                <input asp-for="SearchText" class="form-control" placeholder="Search Here" />
            <br />
                <input type="submit" class="btn btn-primary" style="color: white; background-color:#AC9CD8" />
    </form>
    <br />
    <a asp-page="Index" class="btn btn-primary" style="color: white; background-color:#AC9CD8"> Return to My Projects </a>
    }
    else{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        foreach (var proj in Model.ProjectList)
        {
            SqlDataReader projectReader = DBProjectClass.SingleProjectReader(proj.ProjectID);
    <div class="column">
                    <div class="card" style="color: black; background-color: #fff">
                        <img src="@Methods.projimgFinder(proj.ProjectName)" alt="" style="width:50%" height="75%">
                        <h3>@proj.ProjectName</h3>
                        <p>@proj.ProjectMissionStatement</p>
                        <p>@proj.ProjectType</p>
                        <p>@proj.ProjectDescription</p>
                        <p>@proj.ProjectOwnerEmail</p>
                        <a asp-page="SearchProject" class="btn btn-basic" asp-route-ProjID="@proj.ProjectID" style="color: white; background-color:#AC9CD8; width: 50%"> Request to Join </a>
                        <br />
                    </div>
                    <br />
    </div>
    }

    
}
}

</body>
</html>