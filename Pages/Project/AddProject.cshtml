<form asp-page="AddProject">
    <select name = "NewProjectProfile.ProfileID">
        <option value = "">Choose Project Owner</option>
        @{
            foreach(var usr in Model.UserList){
                    <option value=@usr.ProfileID>@usr.Username</option>
                }
            }
        </select>
        <input type="text" asp-for="NewProjectProfile.ProjectDescription" placeholder="Project Description" />
        <input type="text" asp-for="NewProjectProfile.ProjectType" placeholder="Project Type" />
        <input type="text" asp-for="NewProjectProfile.ProjectName" placeholder="Project Name" />
        <input type="text" asp-for="NewProjectProfile.ProjectOwnerEmail" placeholder="Project Owner's Email" />
        <input type="date" asp-for="NewProjectProfile.ProjectBeginDate" placeholder="Project's Start Date" />
        <br />
  
        <input type="text" asp-for="NewProjectProfile.ProjectMissionStatement" placeholder="Project's Mission Statement" />
        <br />
        <button type="submit">Add Project -> </button>
        <br />
        <button class="btn btn-outline-secondary" asp-page="AddProject" asp-page-handler="PopulateHandler" formnovalidate>Populate</button>
        <br />
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>

    </form>