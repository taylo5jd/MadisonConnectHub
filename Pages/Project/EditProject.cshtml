@model lab_1_part_3.Pages.Project.EditProjectModel
@{
    ViewData["Title"] = "Edit Project";
}
<form asp-page="EditProject">
  
    <br />
    <a asp-page="FileUploadProject" asp-route-projname="@Model.ProjectToUpdate.ProjectName" class="btn btn-secondary" style="color: white; background-color:#AC9CD8;">Upload Image</a>
<input type="hidden" asp-for="@Model.ProjectToUpdate.ProjectID" />
    <br />
    <label asp-for="@Model.ProjectToUpdate.ProjectDescription"></label>
    <input type="text" asp-for="@Model.ProjectToUpdate.ProjectDescription" />
    <br />
    <label asp-for="@Model.ProjectToUpdate.ProjectType"></label>
    <input type="text" asp-for="@Model.ProjectToUpdate.ProjectType" />
    <br />
    <label asp-for="@Model.ProjectToUpdate.ProjectName"></label>
    <input type="text" asp-for="@Model.ProjectToUpdate.ProjectName" />
    <br />
    <label asp-for="@Model.ProjectToUpdate.ProjectOwnerEmail"></label>
    <input type="text" asp-for="@Model.ProjectToUpdate.ProjectOwnerEmail" />
    <br />
    <label asp-for="@Model.ProjectToUpdate.ProjectBeginDate"></label>
    <input type="date" asp-for="@Model.ProjectToUpdate.ProjectBeginDate" />
    <br />
    <label asp-for="@Model.ProjectToUpdate.ProjectMissionStatement"></label>
    <input type="text" asp-for="@Model.ProjectToUpdate.ProjectMissionStatement" />
    <br /><br />
    <input type="submit" class="btn btn-success" style="color: white; background-color:#AC9CD8" asp-page="EditProject" />
    <a asp-page="Index" class="btn btn-secondary" style="color: white; background-color:#AC9CD8">Cancel</a>
</form>
