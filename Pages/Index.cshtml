@using Pages.DBClasses
@using System.Data.SqlClient
@model IndexModel
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <style>
        * {
            box-sizing: border-box;
            align-items: center;
            font-family: 'IBM Plex Sans';
        }

        .h1 {
            font-size: 10%;
        }

        body {
            align-items: center;
            font-family: "IBM Plex Sans";
            padding: 0;
            align-content: center;
        }

        .column {
            float: left;
            width: 30%;
            padding-top: 10px;
            padding-bottom: 10px;
            align-content: center;
            align-items: center;
            margin: auto;
        }

        .row {
            margin: auto;
        }

            .row:after {
                content: "";
                display: table;
                clear: both;
            }

        .card {
            box-shadow: 0 4px 8px 0 rgba(0,0,0, 0.2);
            text-align: center;
            background-color: #ffffff;
            height: auto;
            border-radius: 3%;
        }

            .card img {
                width: 150px;
                height: 150px;
                overflow: hidden;
                border-radius: 3%;
                margin: 0px auto 0;
                object-fit: cover;
            }

        .button {
            border-radius: 15px;
        }

        .pic {
            padding: 0;
        }

        .mission {
            background-color: #3E1C66;
            font-color: #3E1C66;
            text-align: right;
        }

        h2 {
            font-size: 200%;
            clear: both;
            display: inline-block;
            overflow: hidden;
            white-space: nowrap;
        }

        p {
            clear: both;
            display: inline-block;
            overflow: hidden;
            white-space: nowrap;
        }

    </style>
</head>
<body>
    @{
        ViewData["Title"] = "Home page";
    }


    <div class="text-center">
        <div class="MCHub">
            <img class="pic" style="padding: 0;" src="~/Images/landingpage.png" alt="landpagegrouppic" style="width: 300px; height: 337px; object-fit: scale-down;">
        </div>
    </div>


    <div class="Mission">
        <h3>Our Mission</h3>
        <p> Create a collaborative platform for students to find and share ideas. It creates transparency into the project ideas and make it easier for teams to frorm with the right expertise to move big ideas forward.</p>
    </div>

    <div class="text-center">
        @{
            string Username = HttpContext.Session.GetString("username");
            SqlDataReader userReader = DBUserClass.FirstNameReader(Username);
            string firstName = " ";
            while (userReader.Read())
            {
                firstName += userReader["FirstName"].ToString();
            }

        }

        @*<p>To access all available pages, please use the nav bar above.</p>*@
        @{

            if (HttpContext.Session.GetString("username") != null)
            {
                                    <h1 class="display-4">Welcome back, @firstName!</h1>
